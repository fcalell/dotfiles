# AUR Packages for Arch Linux
# Generated by chezmoi from .chezmoidata/packages.toml
# DO NOT EDIT MANUALLY - Edit packages.toml instead
# Install with: paru -S --needed - < ~/.config/packages-aur.txt

{{- $packages := .packages }}
{{- $hasAurPackages := false }}

{{- range $category, $items := $packages }}
{{- range $name, $pkg := $items }}
{{- if hasKey $pkg "linux" }}
{{- if hasKey $pkg.linux "aur" }}
{{- $hasAurPackages = true }}
{{- end }}
{{- end }}
{{- end }}
{{- end }}

{{- if $hasAurPackages }}
# Languages & Version Managers
{{- range $name, $pkg := $packages.languages }}
{{- if hasKey $pkg "linux" }}
{{- if hasKey $pkg.linux "aur" }}
{{ $pkg.linux.aur }}
{{- end }}
{{- end }}
{{- end }}

# Other AUR Packages
{{- range $category, $items := $packages }}
{{- if ne $category "languages" }}
{{- range $name, $pkg := $items }}
{{- if hasKey $pkg "linux" }}
{{- if hasKey $pkg.linux "aur" }}
{{ $pkg.linux.aur }}
{{- end }}
{{- end }}
{{- end }}
{{- end }}
{{- end }}
{{- else }}
# No AUR packages defined
{{- end }}
